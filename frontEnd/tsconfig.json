{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"],
    "jsx": "react-jsx"
  },
  "include": ["scripts/**/*", "src/**/*"],
  "exclude": ["node_modules"]
}
